<Window x:Class="GazeViewer.Windows.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GazeViewer.Windows"
        xmlns:vm ="clr-namespace:GazeViewer.ViewModels"
        xmlns:cmd ="clr-namespace:GazeViewer.Infastructure.Commands"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="800">
    <Window.DataContext>
        <vm:MenuWindowViewModel/>
    </Window.DataContext>
    <Window.Resources >
        <cmd:CloseApplicationCommand x:Key="CloseApplicationCommand"></cmd:CloseApplicationCommand>
        <cmd:OpenFileDialogCommand x:Key="OpenFileDialogCommand"></cmd:OpenFileDialogCommand>
    </Window.Resources>
    <Grid>
        <Menu x:Name="HeaderMenu">
            <MenuItem Header="Файл" Command="{StaticResource OpenFileDialogCommand}"/>
            <MenuItem Header="Закрыть приложение" Command="{StaticResource CloseApplicationCommand}"/>
        </Menu>
        
        <Grid x:Name="MenuGrid" Margin="0,0,0,60">
            <Menu x:Name="MenuItems" VerticalAlignment="Bottom" BorderBrush="Black" BorderThickness="1" Margin="30,30,30,50" >

                <MenuItem Header="Показать все точки"  ></MenuItem>
                <MenuItem Header="Показать тепловую карту"  ></MenuItem>
                <MenuItem Header="Следующий кадр"  ></MenuItem>
                <MenuItem Header="Предыдущий кадр"  ></MenuItem>
                <MenuItem Header="Gaze Plot "  ></MenuItem>
            </Menu>
            <Slider  VerticalAlignment="Bottom" Margin="10,10,10,30" Value="{Binding SliderValue, UpdateSourceTrigger=PropertyChanged}"  Minimum="{Binding MinSliderValue}" Maximum="{Binding MaxSliderValue}"   />
         <TextBlock VerticalAlignment="Bottom"  Height="30"   Text="{Binding SliderValue}"     FontSize="20"></TextBlock>
        </Grid>

        <StatusBar x:Name="ProgressBar" VerticalAlignment="Bottom" Height="50" Margin="10">
            <StatusBarItem>
                <TextBlock Text="Debug Info" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
            </StatusBarItem>
            <StatusBarItem>
            <ProgressBar Height="30"  Value="{Binding SliderValue}" Width="150" ></ProgressBar>
            </StatusBarItem>
        </StatusBar>
        

    </Grid>

    
    
</Window>
