<Window x:Class="GazeViewer.Windows.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GazeViewer.Windows"
        xmlns:vm ="clr-namespace:GazeViewer.ViewModels"
        xmlns:cmd ="clr-namespace:GazeViewer.Infastructure.Commands"
        xmlns:oxy = "http://oxyplot.org/wpf"


        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="800">
    <Window.DataContext>
        <vm:MenuWindowViewModel/>
    </Window.DataContext>
    <Window.Resources >
        <cmd:CloseApplicationCommand x:Key="CloseApplicationCommand"></cmd:CloseApplicationCommand>
        <cmd:OpenFileDialogCommand x:Key="OpenFileDialogCommand"></cmd:OpenFileDialogCommand>







    </Window.Resources>
    <Grid>
        <Menu x:Name="HeaderMenu" Height="20" VerticalAlignment="Top">
            <MenuItem Header="Файл" Command="{Binding  OpenFileCommand}"/>
            <MenuItem Header="Закрыть приложение" Command="{StaticResource CloseApplicationCommand}"/>
        </Menu>

        <TabControl  Margin="0,20,0,0">


            <TabItem Header="Вкладка 1" Width="100">

                <Grid>
                <Grid Margin="0,0,0,150">
                        <!--<Image Style="{StaticResource VizualizeImage}"/>-->
                        <ItemsControl    ItemsSource  ="{Binding  Strings }" Margin="0,0,0,0"  VerticalAlignment="Top">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Grid>

                                </Grid>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Ellipse Fill="BlueViolet" Width="15" Height="15" RenderTransformOrigin="0.5,0.5">
                                        <Ellipse.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform/>
                                                <SkewTransform/>
                                                <RotateTransform/>
                                                <TranslateTransform X="15" Y="15"/>
                                            </TransformGroup>
                                        </Ellipse.RenderTransform>





                                    </Ellipse>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>


                    </ItemsControl>

                </Grid>




                <Grid x:Name="MenuGrid" Height="100" VerticalAlignment="Bottom" Style="{StaticResource GridPositionStyle}">
                    <Menu x:Name="MenuItems" VerticalAlignment="Bottom" BorderBrush="Black" BorderThickness="1" Margin="30,30,30,50" >

                        <MenuItem Header="Показать все точки" Command="{Binding ReadCsvLogsCommand}"   ></MenuItem>
                        <MenuItem Header="Показать тепловую карту"  ></MenuItem>
                        <MenuItem Header="Следующий кадр"  ></MenuItem>
                        <MenuItem Header="Предыдущий кадр"  ></MenuItem>
                        <MenuItem Header="Gaze Plot "  ></MenuItem>
                    </Menu>
                    



                    <Slider  VerticalAlignment="Bottom" Margin="10,10,10,30" Value="{Binding SliderValue, UpdateSourceTrigger=PropertyChanged}"  Minimum="0" Maximum="{Binding Strings.Count}"   />
                    <TextBlock VerticalAlignment="Bottom"  Height="30"   Text="{Binding  Strings.Count, UpdateSourceTrigger=PropertyChanged}"     FontSize="20"></TextBlock>
                </Grid>


                </Grid>
            </TabItem>

            <TabItem Header="График" Width="100">
                <Grid Style="{StaticResource GridPositionStyle}">
                    <oxy:PlotView Model="{Binding HeatMap}">

                    </oxy:PlotView>



                    <!--<oxy:Plot >
                        <oxy:Plot.Axes>
                            <oxy:LinearAxis Position="Left"/>
                            <oxy:LinearAxis Position="Bottom"/>
                        </oxy:Plot.Axes>
                        <oxy:LineSeries Color="MediumPurple"
                                ItemsSource="{Binding GazePoints}"
                                        DataFieldX="X"
                                        DataFieldY="Y"/>
                    </oxy:Plot>-->
                </Grid>






            </TabItem>

            <TabItem Header="Визуализация">
                <Grid   Style="{StaticResource GridPositionStyle}">

                    <Ellipse x:Name="GazePoint"  HorizontalAlignment="Left" Height="50" Margin="342,129,0,172" Stroke="Black"  Width="50" RenderTransformOrigin="0.5,0.5">

                        <Ellipse.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="{Binding Xpos}" Y="{Binding Ypos}"/>
                            </TransformGroup>
                        </Ellipse.RenderTransform>
                    </Ellipse>


                    <Image Style="{StaticResource VizualizeImage}"/>





                </Grid>
            </TabItem>

            <TabItem Header="Визуализация + видео">
                <Grid Style="{StaticResource GridPositionStyle}">

                    <Grid Grid.Row="0">
                        <!--<MediaElement Source="{Binding FilePath}" IsMuted="True" Stretch="Uniform" ></MediaElement>-->

                    </Grid>

                    <Grid Grid.Row="1" Margin="0,0,0,0">
                        <Ellipse   HorizontalAlignment="Left" Height="50" Margin="342,129,0,172" Stroke="Black"  Width="50" RenderTransformOrigin="0.5,0.5">

                            <Ellipse.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform X="{Binding Xpos}" Y="{Binding Ypos}"/>
                                </TransformGroup>
                            </Ellipse.RenderTransform>
                        </Ellipse>



                        <Image Style="{StaticResource VizualizeImage}" />
                    </Grid>

                    <GridSplitter></GridSplitter>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*">

                        </RowDefinition>
                        <RowDefinition Height="4*">

                        </RowDefinition>
                    </Grid.RowDefinitions>







                </Grid>
            </TabItem>




        </TabControl>


















        <StatusBar x:Name="ProgressBar" VerticalAlignment="Bottom" Height="30" Margin="10">
            <StatusBarItem>
                <TextBlock Text="{Binding ReceivedBytes}" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
            </StatusBarItem>
            <StatusBarItem>
                <ProgressBar Height="30"  Value="{Binding SliderValue}" Width="150" ></ProgressBar>
            </StatusBarItem>
        </StatusBar>

    </Grid>



</Window>
