<Window x:Class="GazeViewer.Windows.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GazeViewer.Windows"
        xmlns:vm ="clr-namespace:GazeViewer.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="800">
    <Window.DataContext>
        <vm:MenuWindowViewModel/>
    </Window.DataContext>
    <Grid>

        <Menu>
            <MenuItem Header="Файл"></MenuItem>
        </Menu>

        <Grid>
        <Menu VerticalAlignment="Bottom" Margin="30,30,30,50" >

            <MenuItem Header="Показать все точки"  ></MenuItem>
            <MenuItem Header="Показать тепловую карту"  ></MenuItem>
            <MenuItem Header="Следующий кадр"  ></MenuItem>
            <MenuItem Header="Предыдущий кадр"  ></MenuItem>
             <MenuItem Header="Gaze Plot "  ></MenuItem>
            </Menu>
            <Slider  VerticalAlignment="Bottom" Margin="10,10,10,30" Value="{Binding SliderValue, UpdateSourceTrigger=PropertyChanged}"  Minimum="{Binding MinSliderValue}" Maximum="{Binding MaxSliderValue}"   />
        </Grid>



        <TextBlock VerticalAlignment="Bottom"  Height="30"  Text="{Binding SliderValue}"     FontSize="20"></TextBlock>



    </Grid>
</Window>
