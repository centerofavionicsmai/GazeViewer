<Application x:Class="GazeViewer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GazeViewer"
             StartupUri="Windows/MainWindow.xaml"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
            xmlns:sys="clr-namespace:System;assembly=mscorlib"
             >
    <Application.Resources>
        <Style x:Key="GridPositionStyle" TargetType="Grid">
            <Setter Property="Margin" Value="0,0,0,35"></Setter>
        </Style>
        <Style x:Key="VizualizeImage" TargetType="Image" >
            <Setter Property="Opacity" Value="0.75"/>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="Stretch" Value="Uniform"></Setter>
            <!--<Setter Property="Stretch" Value="None"/>-->
            <Setter Property="Source" Value="{svgc:SvgImage Source=Images/test.svg}"></Setter>
        </Style>

    </Application.Resources>
</Application>
